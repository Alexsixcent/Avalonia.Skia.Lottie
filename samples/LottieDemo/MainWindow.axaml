<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LottieDemo"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LottieDemo.MainWindow"
        x:CompileBindings="True" x:DataType="local:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Lottie Animation Player for Avalonia">
  <Design.DataContext>
    <local:MainWindowViewModel />
  </Design.DataContext>
  <Grid RowDefinitions="*, Auto" Margin="10">
    <Viewbox Grid.Row="0">
      <Lottie Path="{Binding SelectedAsset}" RepeatCount="-1" />
    </Viewbox>
    <ComboBox Grid.Row="1"
              Margin="0,10,0,0"
              HorizontalAlignment="Center"
              SelectedItem="{Binding SelectedAsset}"
              Items="{Binding Assets}" />
  </Grid>
</Window>
